#!/usr/bin/env node
var fs = require('fs');
var path = require('path');
var formatter = require('formatter');
var normalize = require('normalize-package-data');

var package = require(path.resolve('package.json'));
var templateContent = fs.readFileSync(path.resolve(__dirname, '../template.yaml'), 'utf8');
var template = formatter(templateContent);

// normalize the data
normalize(package);

// write the output
fs.writeFileSync(path.resolve('.travis.yml'), template({ package: package }), 'utf8');
